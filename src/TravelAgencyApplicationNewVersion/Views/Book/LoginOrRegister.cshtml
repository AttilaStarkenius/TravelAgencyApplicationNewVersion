@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication


@model TravelAgencyApplicationNewVersion.ViewModels.LogInViewModel

@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
}



<tr>
        <td>
            @Html.DisplayFor(model => model.flight.Airline)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.ArrivalCity)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.ArrivalTime)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.DepartureCity)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.DepartureTime)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.FirstClass)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.FlightId)
        </td>
            <td>
            @Html.DisplayFor(model => model.flight.FlightPrice)
        </td>
        <td>
            @Html.DisplayFor(model => model.flight.SeatId)
        </td>
    </tr>

@*<input id="FlightPrice" name="FlightPrice" type="hidden" value="@Model.flight.FlightPrice" />*@


@if (User.Identity.IsAuthenticated == false) { 
        <form asp-controller="Login" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>Or login as an existing user.</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="flight.FlightId" type="hidden" />

            <input asp-for="ReturnFlightID" type="hidden" />

            <input asp-for="flight.FlightPrice" type="hidden" />


            <input id="FlightID" name="FlightID" type="hidden" value="@Model.flight.FlightId" />

            <input id="ReturnFlightID" name="ReturnFlightID" type="hidden" value="@Model.ReturnFlightID" />

            <input id="FlightPrice" name="FlightPrice" type="hidden" value="@Model.flight.FlightPrice" />



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Log in</button>




                </div>
            </div>
            <p>
                <a asp-controller="Register" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            </p>
        </form>
}

